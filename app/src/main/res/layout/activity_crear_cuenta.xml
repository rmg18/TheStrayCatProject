<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FABE8A"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="110dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="228dp"
            android:layout_marginLeft="@dimen/cardview_default_radius"
            app:srcCompat="@drawable/petstraycatsolo" />

        <TextView
            android:id="@+id/crearcuenta"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/thecatswhiskers"
            android:text="@string/crearCuenta"
            android:textAlignment="center"
            android:textColor="#101010"
            android:textSize="60sp" />

        <EditText
            android:id="@+id/correo"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/rounded_border"
            android:ems="10"
            android:fontFamily="@font/thecatswhiskers"
            android:hint="@string/Correo"
            android:inputType="text"
            android:paddingStart="16dp" />

        <EditText
            android:id="@+id/contraseña"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/rounded_border"
            android:ems="10"
            android:fontFamily="@font/thecatswhiskers"
            android:hint="@string/Contraseña"
            android:inputType="textPassword"
            android:paddingStart="16dp" />

        <EditText
            android:id="@+id/repetircontraseña"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/rounded_border"
            android:ems="10"
            android:fontFamily="@font/thecatswhiskers"
            android:hint="@string/repetirContraseña"
            android:inputType="textPassword"
            android:paddingStart="16dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/thecatswhiskers"
            android:text="¿Ya tienes cuenta?"
            android:textAlignment="center"
            android:textColor="#AF7C79" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="115dp"
            android:layout_marginEnd="115dp"
            android:fontFamily="@font/thecatswhiskers"
            android:text="@string/botonContinuar"
            android:textSize="24sp"
            app:backgroundTint="#F7825F"
            app:cornerRadius="26dp"
            app:strokeColor="#CF765B"
            app:strokeWidth="5dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>